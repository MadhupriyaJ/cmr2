@model PagedList.IPagedList<FramWork.Models.PersonLeads>
@using PagedList.Mvc;
@{
    Layout = null;
}

@if (Model != null)
{

    <div class="scroller" style="height: 300px;" data-always-visible="1" data-rail-visible="0">
        <ul class="feeds">
            @{
    foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
    {

        <li>
            <div class="col1">
                <div class="cont">
                    <div class="cont-col1">
                        <div class="label label-sm label-info">
                            <i class="fa fa-child"></i>
                        </div>
                    </div>
                    <div class="cont-col2">
                        <div class="desc">
                            @item.Data.People.FirstName @item.Data.People.FirstName <span class="label label-sm label-warning ">
                                Take action <i class="fa fa-share"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col2">
                <div class="date">
                    [date]
                </div>
            </div>
        </li>


    }
            }
        </ul>
    </div>
    <div class="scroller-footer">
        <div class="btn-arrow-link pull-right">
            <a href="#">See All Records</a>
            <i class="icon-arrow-right"></i>
        </div>
    </div>
}



