@using FramWork.HelloService;
@model FramWork.HelloService.Country
@{
    ViewBag.Title = "Lead2Deal | Create Country";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="@Url.Content("~/")Home/Index">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Country</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">New</a>
    </li>
</ul>

<div class="portlet light" id="form_wizard_1">
    <div class="portlet-title">
        <div class="caption caption-subject bold uppercase font-red-sunglo">
            <i class="fa fa-plus-circle bold uppercase font-red-sunglo"></i>  Create Country - <span class="step-title">
                Step 1 of 2
            </span>
        </div>
        <div class="actions">
            <a href="@Url.Content("~/")CountryManagment/Index" class="btn blue ">
                <i class="fa fa-list"></i> List
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <form action="#" class="form-horizontal" id="submit_form" method="POST">
            <div class="form-wizard">
                <div class="form-body">
                    <ul class="nav nav-pills nav-justified steps">
                        <li>
                            <a href="#tab1" data-toggle="tab" class="step">
                                <span class="number">
                                    1
                                </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Country Info
                                </span>
                            </a>
                        </li>

                        <li>
                            <a href="#tab2" data-toggle="tab" class="step">
                                <span class="number">
                                    2
                                </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Confirm
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div id="bar" class="progress progress-striped" role="progressbar">
                        <div class="progress-bar progress-bar-success">
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="alert alert-danger display-none">
                            <button class="close" data-dismiss="alert"></button>
                            You have some form errors. Please check below.
                        </div>
                        <div class="alert alert-success display-none">
                            <button class="close" data-dismiss="alert"></button>
                            Your form validation is successful!
                        </div>
                        <div class="tab-pane active" id="tab1">
                            <h3 class="block">Provide Country information</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Country Name <span class="required">  * </span>
                                        </label>
                                        <div class="col-md-5">
                                            <input type="text" id="CountryName" class="form-control" name="CountryName" />
                                            <span class="help-block">

                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Iso Currency <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-5">
                                            <input type="text" id="IsoCurrency" class="form-control" name="IsoCurrency" />
                                            <span class="help-block">

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Iso Code <span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-5">
                                            <input type="text" id="IsoCode" class="form-control" name="IsoCode" />
                                            <span class="help-block">

                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            GMT<span class="required">
                                                *
                                            </span>
                                        </label>
                                        <div class="col-md-5">
                                            @*<input type="text" id="GMT" class="form-control" name="GMT" />
                                                <span class="help-block">

                                                </span>*@

                                            @Html.DropDownListFor(m => m.GMT, new SelectList(from p in TimeZoneInfo.GetSystemTimeZones()
                                                                                                     select new { Id = 1, p.DisplayName }, "Id", "DisplayName"), "Select ", new { @class = "form-control", @id = "GMT" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">
                                            Locale
                                        </label>
                                        <div class="col-md-5">
                                            <input type="text" id="Locale" class="form-control" name="Locale" />
                                            <span class="help-block">

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="tab2">
                            <h3 class="block">Country information</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-5">Country Name</label>
                                        <div class="col-md-4">
                                            <p class="form-control-static" data-display="CountryName">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-5">Iso Currency</label>
                                        <div class="col-md-4">
                                            <p class="form-control-static" data-display="IsoCurrency">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-5">Iso Code</label>
                                        <div class="col-md-4">
                                            <p class="form-control-static" data-display="IsoCode">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-5">GMT</label>
                                        <div class="col-md-4">
                                            <p class="form-control-static" data-display="GMT">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-5">Locale</label>
                                        <div class="col-md-4">
                                            <p class="form-control-static" data-display="Locale">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <a href="javascript:;" class="btn default button-previous">
                                <i class="m-icon-swapleft"></i> Back
                            </a>
                            <a href="javascript:;" class="btn blue button-next">
                                Continue <i class="m-icon-swapright m-icon-white"></i>
                            </a>
                            <a href="javascript:;" class="btn green button-submit">
                                Submit <i class="m-icon-swapright m-icon-white"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
