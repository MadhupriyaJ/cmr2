    <script src="@Url.Content("~")assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="@Url.Content("~")assets/admin/layout/scripts/layout.js" type="text/javascript"></script>
    <script src="@Url.Content("~")assets/admin/layout/scripts/demo.js" type="text/javascript"></script>
