@model IEnumerable<FramWork.Models.TGoal_Goal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="@Url.Content("~/")Home/Index">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Sales</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Goal Config</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Goal(s)</a>
        
    </li>
  
</ul>
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-yellow-crusta">
            <i class="icon-share font-yellow-crusta"></i>
            <span class="caption-subject bold uppercase"> List Of Goals</span>
            <span class="caption-helper"></span>
        </div>
        <div class="actions">
            @*@Html.ActionLink("Create New", "Create", null, new { @Class = "btn btn-primary", @Title = "List View" })*@
            <a href="#" class="btn btn-circle btn-default btn-icon-only fullscreen btn-primary" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered  table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GoalName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TGoal_GoalLevel.GoalLevel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TGoal_MetricType.MetricType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoalName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TGoal_GoalLevel.GoalLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TGoal_MetricType.MetricType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users.FirstName ) @Html.DisplayFor(modelItem => item.Users.LastName)
                    </td>
                    <td></td>
                    @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>*@
                </tr>
            }

        </table>
    </div>
</div>



