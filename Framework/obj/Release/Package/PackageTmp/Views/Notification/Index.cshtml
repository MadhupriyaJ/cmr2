@{
    ViewBag.Title = Resources.NotificationTitle;
    ViewBag.Subtitle = Resources.NotificationTitle2;
}

<div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    @{
        if (ViewBag.Msg != null && ViewBag.Msg[0] == "1")
        {
            <div class="alert alert-success">
                <button class="close" data-close="alert"></button>
                <strong>Success</strong> @ViewBag.Msg[1]
            </div>
        }
        else if (ViewBag.Msg != null && ViewBag.Msg[0] == "0")
        {
            <div class="note note-danger">
                <h4 class="block">Error, Action failed</h4>
                <p>
                    <button class="close" data-close="alert"></button>
                    <strong>Failed</strong> @ViewBag.Msg[1]
                </p>

            </div>
        }
    }
    <p>
        <a class="btn blue" href="@Url.Action("Add")">
            Add Persons  <i class="fa fa-plus"></i>
        </a>
    </p>

    <div class="portlet box blue-hoki">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i>Users List
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="CoreTable">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Name
                        </th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>


@section Script{

}