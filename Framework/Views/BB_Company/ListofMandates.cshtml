@model PagedList.IPagedList<FramWork.Models.ABB_CompanyManDateAssigned>
@using PagedList.Mvc;
@{
    Layout = null;
}
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th>
                SINO
            </th>
            <th>
                <i class="fa fa-money"></i> Company Account
            </th>
            <th>
                <i class="fa fa-user"></i> Name
            </th>
            <th class="hidden-xs">
                <i class="fa fa-anchor"></i> Passport Number
            </th>
            <th class="hidden-xs">
                <i class="fa fa-anchor"></i> Join Type
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>@(item.Index + ((Model.PageNumber - 1) * Model.PageSize) + 1)</td>
                <td>
                    <a href="#">
                        @item.Data.ABB_CompanyAccount.AccountNumber
                    </a>
                </td>
                <td class="hidden-xs">
                    @item.Data.ABB_CompanyManagmentTeam_Staff.FIrstName  @item.Data.ABB_CompanyManagmentTeam_Staff.LastName
                    
                </td>
                <td>
                  @item.Data.ABB_CompanyManagmentTeam_Staff.PassportNumber
                </td>
                <td>
                    @item.Data.ABB_JoinType.Type
                </td>
                <td>
                    <a class="btn btn-primary EditMandates" id="@item.Data.Id" href="#">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                    <a class="btn btn-primary red DeleteMandates" value="@item.Data.Id" href="#">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
