@section Scripts{
    <script src="~/assets/Programmer/Scripts/Pagination/jquery.tablesorter.js"></script>
    <script src="~/assets/Programmer/Scripts/Pagination/jquery.tablesorter.pager.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
          
            $(".item").click(function () {
                var datarow = { ID: $(this).attr("id") };
                alert($(this).attr("id"));
                $.ajax({
                    type: 'POST',
                    url: '../../PersonManagment/GetPersonSpecific',
                    data: datarow,
                    success: function (response) {
                        if (response == 'True') {
                            alert("true");
                            window.location.href = '/PersonManagment/Index';
                        }
                        else {
                            bootbox.alert("Error, could not complete the action!", function () {
                                window.location.reload();
                            });
                        }
                    }
                });

            });


            $("#MakeLead").click(function () {
                var ID = $('.item').attr("id");
                var url = "/PersonManagment/MakeLead?ID=" + ID;
                window.location.href = url;
             

             



            });












        $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
        .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
    });


    </script>
}

