@model PagedList.IPagedList<FramWork.Models.ABB_RequestFinance>

@{
    Layout = null;
}
<div class="row">
<div class="col-md-10" style="margin-left:60px;">

    <table class="table table-striped table-bordered table-advance table-hover">
    <tr><td align="center"><h4>Call Log Subject: @Session["CallLogSubject"]</h4></td></tr></table>
  
   
@foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
{  
        <div class="row">
            <div class="col-md-12">
             
                
               <h4>Product:  @item.Data.ABB_Products.ProductName &nbsp;&nbsp;&nbsp;&nbsp;<a href="#" id="EditRequestFinance" value="@item.Data.Id" class="btn btn-circle btn-sm red">
    Edit <i class="fa fa-edit"></i>
</a></h4> 
              

                <table class="table table-striped table-bordered table-advance table-hover">
                    

                    <tr>
                        <td>
                            Company Name
                        </td>

                        <td>
                            @item.Data.ABB_Company.EnglishName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Product
                        </td>

                        <td>
                            @item.Data.ABB_Products.ProductName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Purpose
                        </td>

                        <td>
                            @item.Data.Purpose
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Required On
                        </td>

                        <td>
                            @item.Data.RequiredOn.ToShortDateString()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tenure
                        </td>

                        <td>
                            @item.Data.Tenure
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Amount
                        </td>

                        <td>
                            @item.Data.Amount
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Payment Details
                        </td>

                        <td>
                            @item.Data.PaymentDetails
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Deal Stage
                        </td>

                        <td>
                            @item.Data.ABB_DealStages.Name
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Create Date
                        </td>

                        <td>
                            @item.Data.CreateDate.ToShortDateString()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Modified Date
                        </td>

                        <td>
                            @item.Data.ModifiedDate.ToShortDateString()
                        </td>
                    </tr>


                </table>
            </div>
        </div>
    <br />
  
    
}

   

</div>
    </div>





