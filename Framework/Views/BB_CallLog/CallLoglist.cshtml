@model PagedList.IPagedList<FramWork.Models.ABB_CallLog>
@using PagedList.Mvc;
@{
    Layout = null;
}

<div class="table-scrollable">
    <table class="table table-striped table-bordered  table-hover">
        <thead>
            <tr>
                <th> <i class="fa fa-calendar"></i> Meeting Date</th>
                <th><i class="fa fa-briefcase"></i> Subject</th>
                <th class="hidden-xs">
                    <i class="fa fa-question"></i> Interaction Type
                </th>
                <th>
                    <i class="fa fa-building"></i> Place
                </th>               
              
                <th><i class="fa fa-location-arrow"></i> Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
            {
                <tr>
                   
                    <td>
                        <p>@Convert.ToDateTime(item.Data.MeetingDate).ToShortDateString()</p>
                    </td>
                    <td>
                        <p>@item.Data.Subject</p>
                    </td>
                    <td class="hidden-xs">@item.Data.ABB_InteractionType.Type</td>
                    <td>
                        <p>@item.Data.PlaceOfMeeting</p>
                    </td>
                    

                    <td>
                        <a href="@Url.Content("~")BB_CallLog/CLDetails?id=@item.Data.Id" class="btn default btn-xs green-stripe">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>