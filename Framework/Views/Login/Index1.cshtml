<body class="login">
    
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            @*<img src="@Url.Content("~")assets/NewProgrammer/Images/adibbanner.png" style="width:300px;" />*@
            @*<img src="@Url.Content("~")assets/Programmer/Img/adib_new-logo.gif" />*@
            @*<img src="@Url.Content("~")assets/admin/layout4/img/logo-big.png" alt="" />*@
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGIN -->
    <div class="content" style="background:#FFF;">
        <!-- BEGIN LOGIN FORM -->
        <div class="login-form">
            <h3 class="form-title" style="text-transform:capitalize;"><img src="@Url.Content("~")assets/admin/layout4/img/logo.png" alt="logo" style="width:100%" class="logo-default" /></h3>
            <div>
                @{
                    if (ViewBag.PasswordChange != null && ViewBag.PasswordChange == 1)
                    {
                        using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @Class = "login-form", id = "myform" }))
                        {
                            @Html.AntiForgeryToken()
                            <h3 class="form-title">Change Your Password</h3>
                            if (ViewBag.Msg != null && ViewBag.Msg[0] == "1")
                            {
                                <div class="alert alert-success">
                                    <button class="close" data-close="alert"></button>
                                    <strong style="color:#3c763d; text-align:center;"></strong> @ViewBag.Msg[1]
                                </div>
                            }
                            else if (ViewBag.Msg != null && ViewBag.Msg[0] == "0")
                            {
                                <div class="alert alert-danger">
                                    <button class="close" data-close="alert"></button>
                                    <strong style="color:#ff0000;text-align:center;"></strong> @ViewBag.Msg[1]
                                </div>
                            }
                            else if (ViewBag.Msg != null && ViewBag.Msg[0] == "2")
                            {
                                <div class="alert alert-warning">
                                    <button class="close" data-close="alert"></button>
                                    <strong style="color:#FFB848;text-align:center;"><br /></strong> @ViewBag.Msg[1]
                                </div>
                            }
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button>
                                <span>
                                    @Resources.LoginPleaseEnterNewPassword
                                </span>
                            </div>
                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">New Password</label>
                                <div class="input-icon">
                                    <i class="fa fa-lock"></i>
                                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Resources.LoginChangePassword" name="password" id="password" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">Confirm Password</label>
                                <div class="input-icon">
                                    <i class="fa fa-lock"></i>
                                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Resources.LoginChangePassword2" name="password2" />
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn blue pull-right">
                                    Proceed <i class="m-icon-swapright m-icon-white"></i>
                                </button>
                            </div>
                        }
                    }
                    else
                    {
                        <form class="login-form" action="" method="post">
                            @Html.AntiForgeryToken()

                            @{

                        if (ViewBag.Msg != null && ViewBag.Msg[0] == "1")
                        {
                            <div class="alert alert-success">
                                <button class="close" data-close="alert"></button>
                                <strong style="color:#3c763d; text-align:center;"></strong> @ViewBag.Msg[1]
                            </div>
                        }
                        else if (ViewBag.Msg != null && ViewBag.Msg[0] == "0")
                        {
                            <div class="alert alert-danger">
                                <button class="close" data-close="alert"></button>
                                <strong style="color:#ff0000;text-align:center;"></strong> @ViewBag.Msg[1]
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button>
                                <span>
                                    @Resources.LoginError
                                </span>
                            </div>
                        }

                        if (ViewBag.IswithUser != null)
                        {

                            <div class="alert alert-warning">
                                <button class="close" data-close="alert"></button>
                                @Resources.LoginActiveSessionEndWarning <a href="@Url.Action("Sessions")">@Resources.LoginActiveSessionEndWarningBtn</a>
                            </div>

                        }

                        if (ViewBag.IsWindows == null)
                        {
                            <div class="form-group">
                                <label class="control-label visible-ie8 visible-ie9">@Resources.LoginUsername</label>
                                <div class="input-icon">
                                    <i class="fa fa-user"></i>
                                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="@Resources.LoginUsername" name="username" value="@(ViewBag.Username != null ?ViewBag.Username:"")" />
                                </div>
                            </div>
                                <div class="form-group">
                                    <label class="control-label visible-ie8 visible-ie9">@Resources.LoginPassword</label>
                                    <div class="input-icon">
                                        <i class="fa fa-lock"></i>
                                        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Resources.LoginPassword" name="password" />
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <label>

                                    </label>
                                    <button type="submit" class="btn btn-default grey pull-right">
                                        @Resources.LoginBtn <i class="m-icon-swapright "></i>
                                    </button>
                                </div>
                        }
                        else
                        {
                            <div class="form-actions">
                                <label>

                                </label>
                                <button type="submit" class="btn btn-default">
                                    @Resources.LoginBtn <i class="m-icon-swapright m-icon-white"></i>
                                </button>
                            </div>
                        }
                            }
                        </form>
                    }
                }
            </div>



        </div>
        <!-- END LOGIN FORM -->

    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        @DateTime.Now.Year &copy;  Symbiosis
    </div>
    <!-- END COPYRIGHT -->
