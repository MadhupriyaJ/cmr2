@model PagedList.IPagedList<FramWork.Models.ABB_RequestFinance>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ABB_LayoutHome.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="@Url.Content("~/")BB_Deals/Index">Deals</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>
@foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
    {
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-microphone font-blue-hoki"></i>
                    <span class="caption-subject bold font-blue-hoki uppercase">
                       @item.Data.ABB_Company.EnglishName
                    </span>
                    <span class="caption-helper"></span>
                </div>
                <div class="actions">
                    <a href="@Url.Content("~")BB_Deals/Pipeline/@item.Data.Id" class="btn btn-primary red-sunglo btn-sm">
                        <i class="fa fa-sliders"></i> Go To Pipe Line for Manupulation
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@Url.Content("~")assets/Programmer/CompanyLogos/@item.Data.Id/@string.Format("{0}{1}",item.Data.Id,".png")" style="width:100%;height:auto;" />
                        <hr />
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <tr>
                                <td><label>Product</label></td>
                                <td>@item.Data.ABB_Products.ProductName</td>
                            </tr>
                            <tr>
                                <td>Purpose</td>
                                <td>@item.Data.Purpose</td>
                            </tr>
                            <tr>
                                <td>Required On</td>
                                <td>@item.Data.RequiredOn.ToShortDateString()</td>
                            </tr>
                            <tr>
                                <td>Tenure</td>
                                <td>@item.Data.Tenure</td>
                            </tr>
                            <tr>
                                <td>Amount</td>
                                <td>@item.Data.Amount</td>
                            </tr>
                            <tr>
                                <td>Payment Details</td>
                                <td>@item.Data.PaymentDetails</td>
                            </tr>
                            <tr>
                                <td>Call Log</td>
                                <td>@item.Data.CallLogId</td>
                            </tr>
                

                        </table>
                    </div>
                    <div class="col-md-8">
                        <div id="@item.Data.Id" style="min-width: 310px; max-width: 600px; height: 400px; margin: 0 auto"></div>
                        <script src="@Url.Content("~")assets/global/plugins/jquery.min.js" type="text/javascript"></script>
                        <script>
                            $(function () {
                                $('#@item.Data.Id').highcharts({
                                    chart: {
                                        type: 'bar'
                                    },
                                    title: {
                                        text: 'Stacked bar chart'
                                    },
                                    xAxis: {
                                        categories: ['request 1', 'request 2', 'request 3']
                                    },
                                    yAxis: {
                                        min: 0,
                                        title: {
                                            text: 'Total fruit consumption'
                                        }
                                    },
                                    legend: {
                                        reversed: true
                                    },
                                    plotOptions: {
                                        series: {
                                            stacking: 'normal'
                                        }
                                    },
                                    series: [{
                                        name: 'Won',
                                        data: [5, 3, 4,5]
                                    }, {
                                        name: 'Lost',
                                        data: [2, 2, 3]
                                    }, {
                                        name: 'Dropped',
                                        data: [3, 4, 4]
                                    }]
                                });
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
@section Scripts{
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
​
}
