@model IEnumerable<FramWork.Models.Commision_SalesAgentRules>

@{
    ViewBag.Title = "Lead2Deal |Sales Agent Rules List";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="@Url.Content("~/")Home/Index">Home</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Sales</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Commission</a>
        <i class="fa fa-circle"></i>
    </li>
    <li>
        <a href="#">Sales Agent Rules List </a>
    </li>

</ul>
<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption font-yellow-crusta">
            <i class="icon-share font-yellow-crusta"></i>
            <span class="caption-subject bold uppercase"> Sales Agent Rules List</span>
            <span class="caption-helper"></span>
        </div>
        <div class="actions">
            <a class="btn btn-primary" href="@Url.Content("~")/SalesAgentRules/Create">
                <i class="icon-plus"></i> Add New
            </a>
            <a href="#" class="btn btn-circle btn-default btn-icon-only fullscreen green" style="color:white;" data-original-title="" title=""></a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-advance table-hover">
            <tr>

                <th>
                    Name
                </th>
                <th>
                    Product
                </th>
                <th>
                    Min Commision
                </th>
                <th>
                    Max Commision
                </th>                
                <th>
                    Modified Date
                </th>
                <th>Actions</th>


            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Teams.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampaignProducts.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinCommision)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxCommision)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>


                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


